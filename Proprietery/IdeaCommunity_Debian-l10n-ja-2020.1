ARG coshapp_ver
FROM debian:${coshapp_ver:-10.4}
label maintainer="Okadarien Saru <okadas@dev.sysnk.net>"

RUN apt-get update
RUN apt-get install -y mate
RUN apt-get install -y sudo
RUN apt-get install -y locales locales-all
RUN apt-get install -y curl
RUN apt-get install -y firefox-esr 
RUN apt-get install -y openjdk-11-jre openjdk-11-jdk
WORKDIR /usr/local
RUN curl -sL https://download.jetbrains.com/idea/ideaIC-2020.1.tar.gz > idea.tgz
RUN tar xzf idea.tgz
ENV PATH=/usr/local/idea-IC-201.6668.121/bin:$PATH
RUN apt-get install -y git
RUN apt-get install -y fonts-noto-mono fonts-noto-cjk fonts-noto-color-emoji
RUN apt-get install -y ibus ibus-mozc

RUN apt-get clean all
RUN useradd -m duser
USER duser
CMD /bin/sh
